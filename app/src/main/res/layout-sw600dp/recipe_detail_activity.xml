<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_two_pane"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <FrameLayout
        android:id="@+id/container_steps_list"
        android:name="com.example.bakingapp.ui.recipe_detail.StepsMasterFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white" />

    <FrameLayout
        android:id="@+id/container_step_detail"
        android:name="com.example.bakingapp.ui.recipe_detail.StepDetailFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        tools:ignore="InconsistentLayout" />

</LinearLayout>
